<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MonitorDrive.Pages.Management.ListInfoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:contentview="clr-namespace:MonitorDrive.ContentViews"
    xmlns:vm="clr-namespace:MonitorDrive.ViewModels"
    x:DataType="vm:TravelViewModel"
    BackgroundColor="{StaticResource Gray90}"
    NavigationPage.IconColor="{StaticResource Tertiary}">

    <ContentPage.BindingContext>
        <vm:TravelViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions=".93*,.07*" RowSpacing="20">
        <Grid
            Margin="15,25,15,0"
            RowDefinitions=".1*,.8*,.1*"
            RowSpacing="20">
            <Label
                FontFamily="InterSB"
                FontSize="28"
                HorizontalOptions="Center"
                Text="Travels List"
                TextColor="{StaticResource Tertiary}" />

            <Frame
                Grid.Row="1"
                Padding="0"
                BackgroundColor="{StaticResource CardBG}"
                BorderColor="{StaticResource CardBG}"
                HasShadow="True">
                <ListView ItemsSource="{Binding Travels}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" ColumnDefinitions="*,*,*,*,*,*,*">
                                <Label
                                    Grid.Column="0"
                                    Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}"
                                    TextColor="Black" />
                                <Label
                                    Grid.Column="1"
                                    Text="{Binding Distance}"
                                    TextColor="{StaticResource Tertiary}" />
                                <Label
                                    Grid.Column="2"
                                    Text="{Binding StartTime, StringFormat='{0:hh\\:mm}'}"
                                    TextColor="{StaticResource Tertiary}" />
                                <Label
                                    Grid.Column="3"
                                    Text="{Binding EndTime, StringFormat='{0:hh\\:mm}'}"
                                    TextColor="{StaticResource Tertiary}" />
                                <Label
                                    Grid.Column="4"
                                    Text="{Binding TotalAmount, StringFormat='${0:F2}'}"
                                    TextColor="{StaticResource Tertiary}" />
                                <Label
                                    Grid.Column="5"
                                    Text="{Binding Tips, StringFormat='${0:F2}'}"
                                    TextColor="{StaticResource Tertiary}" />
                                <Label
                                    Grid.Column="6"
                                    Text="{Binding NumberOfTravels}"
                                    TextColor="{StaticResource Tertiary}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Frame>

            <!--  BotÃ³n con sombreado  -->
            <Border
                Grid.Row="2"
                Margin="5,10,0,0"
                BackgroundColor="{StaticResource Gray300}"
                HeightRequest="60"
                HorizontalOptions="Center"
                Stroke="{StaticResource Gray300}"
                StrokeShape="RoundRectangle 10"
                WidthRequest="200">
                <BoxView CornerRadius="20" Opacity="0.3" />
            </Border>
            <Frame
                x:Name="CircularButton"
                Grid.Row="2"
                Margin="20"
                Padding="0"
                BackgroundColor="{StaticResource Tertiary}"
                BorderColor="Transparent"
                CornerRadius="10"
                HasShadow="True"
                HeightRequest="60"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="200">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCircularButtonTapped" />
                </Frame.GestureRecognizers>
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="+ Add New Travel"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Frame>
        </Grid>
        <contentview:NavBarContentView Grid.Row="1" />
    </Grid>
</ContentPage>
