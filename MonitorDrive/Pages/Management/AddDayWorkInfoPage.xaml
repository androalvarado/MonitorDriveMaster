<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MonitorDrive.Pages.Management.AddDayWorkInfoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Insert Data for Today"
    BackgroundColor="{StaticResource Gray90}">

    <Grid>
        <!--  Primer formulario, paso 1  -->
        <Grid
            x:Name="grid1"
            IsVisible="True"
            RowDefinitions=".1*,.1*,.7*,.1*">

            <!--  Titulo de la Pagina  -->
            <StackLayout>
                <Label
                    Margin="0,20,0,10"
                    FontFamily="InterB24"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="Insert Data for Today"
                    TextColor="{StaticResource Tertiary}"
                    VerticalOptions="Center" />
            </StackLayout>

            <!--  Indicador de los pasos del formulario  -->
            <Grid
                Grid.Row="1"
                Margin="0,10,0,5"
                ColumnDefinitions="*,Auto,*,Auto,*"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <!--  Circulo izquierdo  -->
                <Frame
                    Padding="0"
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="25"
                    HeightRequest="40"
                    HorizontalOptions="Start"
                    WidthRequest="40">
                    <Label
                        FontFamily="InterSB"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="1"
                        TextColor="White"
                        VerticalOptions="Center"
                        ZIndex="999" />
                </Frame>

                <!--  Línea horizontal  -->
                <BoxView
                    Grid.Column="1"
                    BackgroundColor="{StaticResource Tertiary}"
                    HeightRequest="2"
                    VerticalOptions="Center"
                    WidthRequest="100" />

                <!--  Circulo del medio  -->
                <Frame
                    Grid.Column="2"
                    Padding="0"
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="25"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    WidthRequest="40">
                    <Label
                        FontFamily="InterSB"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="2"
                        TextColor="{StaticResource Tertiary}"
                        VerticalOptions="Center"
                        ZIndex="999" />
                </Frame>

                <!--  Línea horizontal  -->
                <BoxView
                    Grid.Column="3"
                    BackgroundColor="{StaticResource Tertiary}"
                    HeightRequest="2"
                    VerticalOptions="Center"
                    WidthRequest="100" />

                <!--  Circulo derecho  -->
                <Frame
                    Grid.Column="4"
                    Padding="0"
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="25"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    WidthRequest="40">
                    <Label
                        FontFamily="InterSB"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="3"
                        TextColor="{StaticResource Tertiary}"
                        VerticalOptions="Center"
                        ZIndex="999" />
                </Frame>
            </Grid>

            <!--  Formulario  -->
            <Frame
                Grid.Row="2"
                Margin="10,10,10,5"
                Padding="0"
                BackgroundColor="{StaticResource CardBG}"
                BorderColor="Transparent"
                CornerRadius="20"
                HasShadow="True">
                <Grid
                    Margin="15,15,15,10"
                    ColumnDefinitions="*,*"
                    ColumnSpacing="40"
                    RowDefinitions="*,*,*,*,*"
                    RowSpacing="10">

                    <!--  Picker para seleccionar un auto  -->
                    <VerticalStackLayout Grid.ColumnSpan="2" VerticalOptions="Center">
                        <Label
                            FontFamily="InterSB"
                            FontSize="16"
                            Text="Select a Car:"
                            TextColor="{StaticResource Tertiary}" />
                        <Border
                            Padding="10,0,0,0"
                            Stroke="{StaticResource Tertiary}"
                            StrokeShape="RoundRectangle 40,40,40,40">
                            <Picker
                                x:Name="carPicker"
                                Title="Select a Car"
                                HeightRequest="50"
                                SelectedIndexChanged="OnPickerSelectedIndexChanged"
                                TextColor="{StaticResource Tertiary}">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Auto 1</x:String>
                                        <x:String>Auto 2</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>

                    <!--  Range para introducir la cantidad de millas  -->
                    <VerticalStackLayout Grid.Row="1">
                        <Label
                            FontFamily="InterSB"
                            Text="Start Miles"
                            TextColor="{StaticResource Tertiary}" />
                        <Border
                            Padding="10,0,0,0"
                            Stroke="{StaticResource Tertiary}"
                            StrokeShape="RoundRectangle 40">
                            <Entry
                                x:Name="MilesStartedEntry"
                                HeightRequest="50"
                                Keyboard="Numeric"
                                Placeholder="000000.00"
                                TextColor="{StaticResource Primary}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Time Picker para la hora de inicio  -->
                    <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                        <Label
                            FontFamily="InterSB"
                            Text="Start Time"
                            TextColor="{StaticResource Tertiary}" />
                        <Border
                            Padding="10,0,0,0"
                            Stroke="{StaticResource Tertiary}"
                            StrokeShape="RoundRectangle 40">
                            <TimePicker
                                x:Name="startTimePicker"
                                FontFamily="InterSB"
                                HeightRequest="50"
                                TextColor="{StaticResource Primary}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Entry para introducir la cantidad de millas al finalizar  -->
                    <VerticalStackLayout Grid.Row="2">
                        <Label
                            FontFamily="InterSB"
                            Text="End Miles"
                            TextColor="{StaticResource Tertiary}" />
                        <Border
                            Padding="10,0,0,0"
                            Stroke="{StaticResource Tertiary}"
                            StrokeShape="RoundRectangle 40">
                            <Entry
                                x:Name="MilesFinishedEntry"
                                HeightRequest="50"
                                Keyboard="Numeric"
                                Placeholder="000000.00"
                                TextColor="{StaticResource Primary}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Time Picker para la hora finalizado  -->
                    <VerticalStackLayout Grid.Row="2" Grid.Column="1">
                        <Label
                            FontFamily="InterSB"
                            Text="End Time"
                            TextColor="{StaticResource Tertiary}" />
                        <Border
                            Padding="10,0,0,0"
                            Stroke="{StaticResource Tertiary}"
                            StrokeShape="RoundRectangle 40">
                            <TimePicker
                                x:Name="endTimePicker"
                                FontFamily="InterSB"
                                HeightRequest="50"
                                TextColor="{StaticResource Primary}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Entry para el total ganado y el total de propinas  -->
                    <VerticalStackLayout Grid.Row="3">
                        <Label
                            FontFamily="InterSB"
                            Text="Total Earned"
                            TextColor="{StaticResource Tertiary}" />
                        <Border
                            Padding="10,0,0,0"
                            Stroke="{StaticResource Tertiary}"
                            StrokeShape="RoundRectangle 40">
                            <Entry
                                x:Name="totalEarnedEntry"
                                HeightRequest="50"
                                Keyboard="Numeric"
                                Placeholder="$ 00.00"
                                TextColor="{StaticResource Primary}" />
                        </Border>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Row="3" Grid.Column="1">
                        <Label
                            FontFamily="InterSB"
                            Text="Total Tips"
                            TextColor="{StaticResource Tertiary}" />
                        <Border
                            Padding="10,0,0,0"
                            Stroke="{StaticResource Tertiary}"
                            StrokeShape="RoundRectangle 40">
                            <Entry
                                x:Name="totalTipsEntry"
                                HeightRequest="50"
                                Keyboard="Numeric"
                                Placeholder="$ 00.00"
                                TextColor="{StaticResource Primary}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Entry para el total de viajes  -->
                    <VerticalStackLayout Grid.Row="4" Grid.ColumnSpan="2">
                        <Label
                            FontFamily="InterSB"
                            Text="Total of Travels"
                            TextColor="{StaticResource Tertiary}" />
                        <Border
                            Padding="10,0,0,0"
                            Stroke="{StaticResource Tertiary}"
                            StrokeShape="RoundRectangle 40">
                            <Entry
                                x:Name="cantidadViajesEntry"
                                HeightRequest="50"
                                Keyboard="Numeric"
                                Placeholder="Travels completed"
                                TextColor="{StaticResource Primary}" />
                        </Border>
                    </VerticalStackLayout>

                </Grid>
            </Frame>


            <!--  Botones continuar y regresar  -->
            <Grid
                Grid.Row="3"
                Margin="20,10,20,20"
                BackgroundColor="Transparent"
                ColumnDefinitions="*,*"
                ColumnSpacing="80">
                <Button
                    BackgroundColor="{StaticResource CardBG}"
                    BorderColor="{StaticResource Tertiary}"
                    Clicked="OnExitFormButtom"
                    CornerRadius="20"
                    FontFamily="InterB24"
                    FontSize="20"
                    HeightRequest="50"
                    Text="Back"
                    TextColor="{StaticResource Tertiary}">
                    <Button.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity="0.3"
                            Radius="5"
                            Offset="10,10" />
                    </Button.Shadow>
                </Button>

                <Button
                    Grid.Column="1"
                    BackgroundColor="{StaticResource Tertiary}"
                    BorderColor="{StaticResource Tertiary}"
                    Clicked="OnContinueClicked"
                    CornerRadius="20"
                    FontFamily="InterB24"
                    FontSize="20"
                    HeightRequest="50"
                    Text="Continue"
                    TextColor="White">
                    <Button.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity="0.3"
                            Radius="5"
                            Offset="10,10" />
                    </Button.Shadow>
                </Button>
            </Grid>
        </Grid>

        <!--  Segundo formulario, Paso 2  -->
        <Grid
            x:Name="grid2"
            IsVisible="False"
            RowDefinitions=".1*,.1*,.7*,.1*">
            <!--  Titulo de la Pagina  -->
            <StackLayout>
                <Label
                    Margin="0,20,0,10"
                    FontFamily="InterB24"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="Few Questions About"
                    TextColor="{StaticResource Tertiary}"
                    VerticalOptions="Center" />
            </StackLayout>

            <!--  Indicador de los pasos del formulario  -->

            <Grid
                Grid.Row="1"
                Margin="0,10,0,5"
                ColumnDefinitions="*,Auto,*,Auto,*"
                HorizontalOptions="Center"
                VerticalOptions="Center">

                <!--  Circulo izquierdo  -->

                <Frame
                    Padding="0"
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="25"
                    HeightRequest="40"
                    HorizontalOptions="Start"
                    WidthRequest="40">
                    <Label
                        BackgroundColor="{StaticResource Tertiary}"
                        FontFamily="InterSB"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="1"
                        TextColor="{StaticResource Tertiary}"
                        VerticalOptions="Center"
                        ZIndex="999" />
                </Frame>


                <!--  Línea horizontal  -->

                <BoxView
                    Grid.Column="1"
                    BackgroundColor="{StaticResource Tertiary}"
                    HeightRequest="2"
                    VerticalOptions="Center"
                    WidthRequest="100" />


                <!--  Circulo del medio  -->

                <Frame
                    Grid.Column="2"
                    Padding="0"
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="25"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    WidthRequest="40">
                    <Label
                        FontFamily="InterSB"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="2"
                        TextColor="White"
                        VerticalOptions="Center"
                        ZIndex="999" />
                </Frame>


                <!--  Línea horizontal  -->

                <BoxView
                    Grid.Column="3"
                    BackgroundColor="{StaticResource Tertiary}"
                    HeightRequest="2"
                    VerticalOptions="Center"
                    WidthRequest="100" />


                <!--  Circulo derecho  -->

                <Frame
                    Grid.Column="4"
                    Padding="0"
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="25"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    WidthRequest="40">
                    <Label
                        FontFamily="InterSB"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="3"
                        TextColor="{StaticResource Tertiary}"
                        VerticalOptions="Center"
                        ZIndex="999" />
                </Frame>
            </Grid>


            <!--  Formulario  -->

            <Frame
                Grid.Row="2"
                Margin="10,10,10,5"
                Padding="0"
                BackgroundColor="{StaticResource CardBG}"
                BorderColor="Transparent"
                CornerRadius="20"
                HasShadow="True">
                <VerticalStackLayout
                    Padding="30,0"
                    Spacing="25"
                    VerticalOptions="Center">
                    <VerticalStackLayout Spacing="10">
                        <Label
                            FontFamily="InterSB"
                            FontSize="18"
                            Text="How do you feel today about  your travels?"
                            TextColor="{StaticResource Tertiary}" />
                        <HorizontalStackLayout
                            x:Name="Rating1"
                            HorizontalOptions="Center"
                            Spacing="5">
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="1,1" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="1,2" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="1,3" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="1,4" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="1,5" />
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label
                            FontFamily="InterSB"
                            FontSize="18"
                            Text="How do you feel today about  your incomes?"
                            TextColor="{StaticResource Tertiary}" />
                        <HorizontalStackLayout
                            x:Name="Rating2"
                            HorizontalOptions="Center"
                            Spacing="5">
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="2,1" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="2,2" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="2,3" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="2,4" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="2,5" />
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label
                            FontFamily="InterSB"
                            FontSize="18"
                            Text="How do you feel today in  general?"
                            TextColor="{StaticResource Tertiary}" />
                        <HorizontalStackLayout
                            x:Name="Rating3"
                            HorizontalOptions="Center"
                            Spacing="5">
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="3,1" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="3,2" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="3,3" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="3,4" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label
                                FontSize="32"
                                Text="&#9734;"
                                TextColor="Gold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="3,5" />
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!--  Botones continuar y regresar  -->
            <Grid
                Grid.Row="3"
                Margin="20,10,20,20"
                BackgroundColor="Transparent"
                ColumnDefinitions="*,*"
                ColumnSpacing="80">
                <Button
                    BackgroundColor="{StaticResource CardBG}"
                    BorderColor="{StaticResource Tertiary}"
                    Clicked="OnCancelClicked"
                    CornerRadius="20"
                    FontFamily="InterB24"
                    FontSize="20"
                    HeightRequest="50"
                    Text="Back"
                    TextColor="{StaticResource Tertiary}">
                    <Button.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity="0.3"
                            Radius="5"
                            Offset="10,10" />
                    </Button.Shadow>
                </Button>

                <Button
                    Grid.Column="1"
                    BackgroundColor="{StaticResource Tertiary}"
                    BorderColor="{StaticResource Tertiary}"
                    Clicked="OnContinueClicked"
                    CornerRadius="20"
                    FontFamily="InterB24"
                    FontSize="20"
                    HeightRequest="50"
                    Text="Continue"
                    TextColor="White">
                    <Button.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity="0.3"
                            Radius="5"
                            Offset="10,10" />
                    </Button.Shadow>
                </Button>
            </Grid>
        </Grid>

        <!--  Tercer Formulario, Paso 3  -->
        <Grid
            x:Name="grid3"
            IsVisible="False"
            RowDefinitions=".1*,.1*,.7*,.1*">
            <!--  Titulo de la Pagina  -->
            <StackLayout>
                <Label
                    Margin="0,20,0,10"
                    FontFamily="InterB24"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="Check your Data"
                    TextColor="{StaticResource Tertiary}"
                    VerticalOptions="Center" />
            </StackLayout>

            <!--  Indicador de los pasos del formulario  -->
            <Grid
                Grid.Row="1"
                Margin="0,10,0,5"
                ColumnDefinitions="*,Auto,*,Auto,*"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <!--  Circulo izquierdo  -->
                <Frame
                    Padding="0"
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="25"
                    HeightRequest="40"
                    HorizontalOptions="Start"
                    WidthRequest="40">
                    <Label
                        FontFamily="InterSB"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="1"
                        TextColor="{StaticResource Tertiary}"
                        VerticalOptions="Center"
                        ZIndex="999" />
                </Frame>

                <!--  Línea horizontal  -->
                <BoxView
                    Grid.Column="1"
                    BackgroundColor="{StaticResource Tertiary}"
                    HeightRequest="2"
                    VerticalOptions="Center"
                    WidthRequest="100" />

                <!--  Circulo del medio  -->
                <Frame
                    Grid.Column="2"
                    Padding="0"
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="25"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    WidthRequest="40">
                    <Label
                        FontFamily="InterSB"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="2"
                        TextColor="{StaticResource Tertiary}"
                        VerticalOptions="Center"
                        ZIndex="999" />
                </Frame>

                <!--  Línea horizontal  -->
                <BoxView
                    Grid.Column="3"
                    BackgroundColor="{StaticResource Tertiary}"
                    HeightRequest="2"
                    VerticalOptions="Center"
                    WidthRequest="100" />

                <!--  Circulo derecho  -->
                <Frame
                    Grid.Column="4"
                    Padding="0"
                    BackgroundColor="{StaticResource Tertiary}"
                    CornerRadius="25"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    WidthRequest="40">
                    <Label
                        FontFamily="InterSB"
                        FontSize="25"
                        HorizontalOptions="Center"
                        Text="3"
                        TextColor="White"
                        VerticalOptions="Center"
                        ZIndex="999" />
                </Frame>
            </Grid>

            <!--  Formulario  -->
            <Frame
                Grid.Row="2"
                Margin="10,10,10,5"
                Padding="20,20,20,10"
                BackgroundColor="{StaticResource CardBG}"
                BorderColor="Transparent"
                CornerRadius="20"
                HasShadow="True">
                <Grid RowDefinitions=".05*,.05*,.05*,.05*,.05*,.05*,.05*,.05*,.05*,.05*,.05*,.05*,.3*">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="40">
                        <Label
                            FontFamily="InterSB"
                            FontSize="16"
                            Text="Selected Car:"
                            TextColor="{StaticResource Tertiary}" />
                        <Label
                            Grid.Column="1"
                            FontFamily="InterSB"
                            HorizontalOptions="Start"
                            Text="Auto 1"
                            TextColor="{StaticResource Gray400}" />
                    </Grid>
                    <BoxView
                        Grid.Row="1"
                        HeightRequest="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="350"
                        Color="{StaticResource FontOP}" />

                    <Grid
                        Grid.Row="2"
                        ColumnDefinitions="*,*"
                        ColumnSpacing="40">
                        <Label
                            FontFamily="InterSB"
                            FontSize="16"
                            Text="Miles:"
                            TextColor="{StaticResource Tertiary}" />
                        <Label
                            Grid.Column="1"
                            FontFamily="InterSB"
                            HorizontalOptions="Start"
                            Text="000000"
                            TextColor="{StaticResource Gray400}" />
                    </Grid>
                    <BoxView
                        Grid.Row="3"
                        HeightRequest="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="350"
                        Color="{StaticResource FontOP}" />

                    <Grid
                        Grid.Row="4"
                        ColumnDefinitions=".4*,.6*"
                        ColumnSpacing="40">
                        <Label
                            FontFamily="InterSB"
                            FontSize="16"
                            Text="Time:"
                            TextColor="{StaticResource Tertiary}" />
                        <Grid Grid.Column="1" ColumnDefinitions=".55*,.07*,.55*">
                            <Label
                                FontFamily="InterSB"
                                HorizontalOptions="Start"
                                Text="00:00:00"
                                TextColor="{StaticResource Gray400}" />
                            <BoxView
                                Grid.Column="1"
                                HeightRequest="2"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                WidthRequest="5"
                                Color="{StaticResource Tertiary}" />
                            <Label
                                Grid.Column="2"
                                FontFamily="InterSB"
                                HorizontalOptions="Start"
                                Text="00:00:00"
                                TextColor="{StaticResource Gray400}" />
                        </Grid>
                    </Grid>
                    <BoxView
                        Grid.Row="5"
                        HeightRequest="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="350"
                        Color="{StaticResource FontOP}" />

                    <Grid
                        Grid.Row="6"
                        ColumnDefinitions="*,*"
                        ColumnSpacing="40">
                        <Label
                            FontFamily="InterSB"
                            FontSize="16"
                            Text="Total Earned:"
                            TextColor="{StaticResource Tertiary}" />
                        <Label
                            Grid.Column="1"
                            FontFamily="InterSB"
                            HorizontalOptions="Start"
                            Text="$ 0.00"
                            TextColor="{StaticResource Gray400}" />
                    </Grid>
                    <BoxView
                        Grid.Row="7"
                        HeightRequest="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="350"
                        Color="{StaticResource FontOP}" />

                    <Grid
                        Grid.Row="8"
                        ColumnDefinitions="*,*"
                        ColumnSpacing="40">
                        <Label
                            FontFamily="InterSB"
                            FontSize="16"
                            Text="Total Tips:"
                            TextColor="{StaticResource Tertiary}" />
                        <Label
                            Grid.Column="1"
                            FontFamily="InterSB"
                            HorizontalOptions="Start"
                            Text="$ 0.00"
                            TextColor="{StaticResource Gray400}" />
                    </Grid>
                    <BoxView
                        Grid.Row="9"
                        HeightRequest="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="350"
                        Color="{StaticResource FontOP}" />

                    <Grid
                        Grid.Row="10"
                        ColumnDefinitions="*,*"
                        ColumnSpacing="40">
                        <Label
                            FontFamily="InterSB"
