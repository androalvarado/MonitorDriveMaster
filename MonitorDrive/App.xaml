<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="MonitorDrive.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MonitorDrive">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <Color x:Key="TransitionColor">#703FF3</Color>
                    <Style x:Key="TransitionOverlay" TargetType="BoxView">
                        <Setter Property="Color" Value="{StaticResource TransitionColor}" />
                        <Setter Property="Opacity" Value="0" />
                        <Setter Property="InputTransparent" Value="True" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>


</Application>
